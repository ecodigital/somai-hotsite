doctype html
html
  head
    block title
      title SOMAI
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    meta(name="viewport" content="width=device-width,initial-scale=1")
    meta(name="fragment" content="!")
    link(rel="stylesheet" href="static/skeleton/css/normalize.css")
    link(rel="stylesheet" href="static/skeleton/css/skeleton.css")
    link(rel="stylesheet" href="css/icons.css")
    link(rel="stylesheet" href="css/app.css")
    block head
  body(ng-controller="SiteCtrl")
    header#masthead
      .header-content
        .header-fixed(scroll-class="active" offset="100")
          .container.row
            .three.columns
              block header-branding
            .nine.columns
              nav#mastnav
                block header-nav
        .info
          .container
            .twelve.columns
              .info-content
                block header-info
    section#summary
      block summary
    .site-sections
      block sections
    footer#colophon
      .container
        .twelve.columns
          block colophon
    script(type="text/javascript" src="static/jquery/dist/jquery.min.js")
    script(type="text/javascript" src="static/angular/angular.min.js")
    script(type="text/javascript" src="static/ui-router/release/angular-ui-router.min.js")
    script(type="text/javascript" src="static/angular-scroll/angular-scroll.min.js")
    script(type="text/javascript" src="app.js")
    block foot

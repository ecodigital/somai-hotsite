  .gallery
    nav.gallery-nav
      button.left
        span.icon.icon-chevron-left
      button.right
        span.icon.icon-chevron-right
      span.current Potencial de mineração
    .gallery-content
      img(expand="right" src="img/antr_1.jpg")

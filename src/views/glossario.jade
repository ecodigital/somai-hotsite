section#glossario
  .container
    .six.columns.offset-by-three
      form#glossario-form
        input(type="text" ng-model="search" placeholder="busque por um termo")
      #glossario-data
        article(ng-repeat="item in items | filter:search")
          h2 {{item.title}}
          p.desc {{item.desc}}
          .long-desc(ng-bind-html="item.long_desc | safe")
